<h1>Listing carts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Cart Id</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <th><%= cart.id %></th>
        <td>
          <%= link_to 'Show', cart %>
          <%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Destroy all carts', delete_carts_path, class: "btn btn-danger", data: {confirm: "Are you sure?"} %>
