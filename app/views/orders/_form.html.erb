<%= form_for @order, html: {role: "form"} do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
        <% @order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% unless @ship %>
    <div class="form-group">
      <%= f.label :name%>
      <%= f.text_field :name, size: 40, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :address%>
      <%= f.text_area :address, cols: 40, rows: 3, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :email%><br>
      <%= f.email_field :email,size: 40, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :pay_type%><br>
      <%= f.select :pay_type, Order::PAYMENT_TYPES,{prompt: 'Select A Payment Method'},{class: "form-control"} %>
    </div>
  <% end %>
  <% if @ship %>
    <div class="form-group">
      <%= f.label :ship_date %>
      <%= f.date_select :ship_date%>
    </div>
  <% end %>
  <%= f.submit "submit",class: "btn btn-primary" %>
  <hr>
  <p><i>The Email typed in will get a notification for the shipped order.</i></p>
<% end %>
