<!DOCTYPE html>
<html>
  <head>
    <title>Depot</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body id="store">
    <div id="banner">
      <%= image_tag("logo.png") %>
      <%= @page_title || "Pragmatic Bookshelf" %><!-- <label id="code.depot.e.title"/> -->
      </div>
      <div id="columns">
        <div id="side" class="group">
          
          <a href="#" style="text-decoration:none"><%= Time.now.strftime("%b %d %y")%></a><br />
          <% if session[:user_id] %>
            <br />
            <%= link_to 'Orders', orders_path %><br />
            <%= link_to 'Products', products_path %><br />
            <%= link_to 'Users', users_path %><br />
            <%= link_to 'Log out', logout_path, method: :delete %><br />
            <br />
          <% else %>
            <%= link_to 'Sign in',new_session_path %>
          <% end %>
          <%= link_to "Home", root_path %><br />
          <%= link_to "Carts", carts_path %><br />
          <% if @cart %>
            <%= hidden_div_if(@cart.line_items.empty?,id: 'cart') { render @cart} %>
          <% end %>
        </div>
      </div>
      <div id="main">
        <% flash.each do |name, msg| -%>
          <%= content_tag :div, msg, class: name %>
        <% end -%>
        <%= yield %>
      </div>
    </div> 
  </body>
</html>
